<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/"
               xmlns:unicorn="http://www.sitecore.net/xmlconfig/unicorn/">
  <sitecore>
    <unicorn>
      <configurations>
        <configuration name="Project.MarketingDefinitions" description="Includes marketing definition items used by Habitat Home Fitness">
          <targetDataStore physicalRootPath="$(fitnessSourceFolder)\Project\AppItems\serialization\Fitness.MarketingDefinitions.Serialization" />
          <predicate>
            <include name="Campaigns" database="master" path="/sitecore/system/Marketing Control Panel/Campaigns/Habitat Fitness" />
            <include name="Goals" database="master" path="/sitecore/system/Marketing Control Panel/Goals/Habitat Fitness" />
          </predicate>
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>